<!DOCTYPE html>
<head>
    <script>
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            window.location = "/controller";
        }
    </script>
    <% include ../main/global_css_sheets.ejs %>
</head>

<body>
<div class="container">
    <% include ../main/navbar.ejs %>
    <div id="content">
        <div class="row center-block">
            <form class="form-horizontal">

                <div class="form-group form-group-lg">
                    <div class="col-sm-4">
                        <input name="username" class="form-control" type="text" id="username" maxlength="20" placeholder="Username" >
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    <div class="col-sm-4">
                        <input name="gameId" onkeyup="checkId()" class="form-control" type="text" id="gameId" placeholder="Game ID" maxlength="5" pattern="[0-9]" oninvalid="setCustomValidity('Plz enter on Alphabets ')">
                        <span style="color:red;">Die Game ID muss 5 Zeichen lang sein!</span>
                    </div>
                </div>

                <input id="connect-to-room" class="btn btn-danger" value="connect to room">
            </form>
        </div>
    </div>
    <% include ../main/footer.ejs %>
    <% include ../main/global_js_scripts.ejs %>
    <div id="content-scripts">
        <script>
            function checkId(){
                console.log(document.getElementById('gameId').value);
            }
        </script>
    </div>
</div>
</body>
